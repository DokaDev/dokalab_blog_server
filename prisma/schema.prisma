generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BoardGroup {
  id    Int    @id @default(autoincrement())
  title String

  boards Board[]
}

model Board {
  id Int @id @default(autoincrement())

  title String
  slug  String @unique

  boardGroupId Int
  boardGroup   BoardGroup @relation(fields: [boardGroupId], references: [id])

  createdAt DateTime  @default(now())
  deletedAt DateTime?

  @@index([boardGroupId])
  @@index([slug])
  // @@map("boards")

  // posts     Post[]
}

